  <script>
    const pid = sessionStorage.getItem('pid');
  
    function logAction(action, details = {}) {
      if (!pid) return; // Avoid logging without a PID
      console.log('Logging action:', { pid, action, details }); // <-- Add this line
      fetch('/log-action', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ pid, action, details })
      });
    }
  
    // Example
    logAction('page_loaded', { page: 'home' });
  </script>